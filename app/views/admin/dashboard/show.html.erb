<section class="admin-dashboard-show">

  <header class="page-header">
    <h1>Admin &raquo; Dashboard</h1>
  </header>

  <table class="table table-hover table-bordered">
    <thead>
      <tr class="table-info">
        <th scope="col">Items</th>
        <th scope="col">Count</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= link_to 'Categories', '/admin/categories', class: "link-success" %></td>
        <td><%= @categories.count %></td>
      </tr>
      <tr>
        <td><%= link_to 'Products', '/admin/products', class: "link-success" %></td>
        <td><%= @products.count %></td>
      </tr>
      <tr>
        <td><%= link_to 'Sales', '/admin/sales', class: "link-success" %></td>
        <td><%= @sales.count %></td>
      </tr>
    </tbody>
  </table>

</section>
